pipeline {
    agent any

    parameters {
        string(name: 'GITHUB_PR_NUMBER', defaultValue: '', description: 'GitHub PR Number')
        string(name: 'GITHUB_REPO', defaultValue: '', description: 'GitHub Repository')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Test') {
            when {
                expression { return env.GITHUB_PR_NUMBER != '' }  // PR이 있을 때만 실행
            }
            steps {
                sh './gradlew clean test'  // Maven 사용 시 ./mvnw test
            }
        }
    }

    post {
        success {
            echo "✅ Tests passed! Reporting to GitHub..."
        }
        failure {
            echo "❌ Tests failed! Reporting to GitHub..."
            script {
                currentBuild.result = 'FAILURE'
            }
        }
    }
}
